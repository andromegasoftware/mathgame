<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kadir.matematikoyunu.Master_seviye_secim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ca"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_kolay"

            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/buton"
            android:shadowColor="#76FF03"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="@string/karisikmaster"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_corta"

            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buton"
            android:shadowColor="#CDDC39"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="@string/mind"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
